<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://code.alibabatech.com/schema/dubbo    http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

  <dubbo:application name="hello-dubbo-client"/>
  <dubbo:registry address="multicast://224.5.6.7:1234"/>
  <dubbo:consumer timeout="5000" />
  <!-- which service to consume? -->
  <!--这里我们得到的是一个rpc调用代理，而不是本地bean实例-->
  <dubbo:reference id="helloService" interface="org.lanqiao.showcase.rpc.dubbo.HelloService"/>

  <bean id="consumer" class="org.lanqiao.showcase.rpc.dubbo.DubboClientConsumer">
    <!--注入rpc客户端代理对象-->
    <property name="helloService" ref="helloService"/>
  </bean>
</beans>